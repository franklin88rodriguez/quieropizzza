@model IEnumerable<CargaAcademica.BL.CensoMaestro>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Censos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.NombreAlumno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodo.numero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.NombreAlumno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodo.año) - @Html.DisplayFor(modelItem => item.Periodo.numero)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Ver Asignatura", "Index","CensoDetalle", new { id=item.Id },null)
        </td>
    </tr>
}

</table>
